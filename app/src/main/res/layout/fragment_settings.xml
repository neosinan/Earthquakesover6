            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_queryy"
            android:text="Minumun magnitude"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/query_button"
            android:text="Enter"/>

    </LinearLayout>
</fragment>